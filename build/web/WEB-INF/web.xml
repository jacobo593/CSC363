<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AddResearch</servlet-name>
        <servlet-class>assignment1servlets.AddResearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddService</servlet-name>
        <servlet-class>assignment1servlets.AddService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPeople</servlet-name>
        <servlet-class>assignment1servlets.AddPeople</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPublication</servlet-name>
        <servlet-class>assignment1servlets.AddPublication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTeaching</servlet-name>
        <servlet-class>assignment1servlets.AddTeaching</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WebSiteController</servlet-name>
        <servlet-class>WebSiteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddResearch</servlet-name>
        <url-pattern>/AddResearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddService</servlet-name>
        <url-pattern>/AddService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPeople</servlet-name>
        <url-pattern>/AddPeople</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPublication</servlet-name>
        <url-pattern>/AddPublication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTeaching</servlet-name>
        <url-pattern>/AddTeaching</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WebSiteController</servlet-name>
        <url-pattern>/WebSiteController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
